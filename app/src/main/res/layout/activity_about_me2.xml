<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cuong.alumni.AboutMe">
    
    <LinearLayout
        android:id="@+id/layout05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        
        <TextView
            android:id="@+id/tvName05"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDob05"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:hint="Ngày sinh"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tvJob05"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Công việc"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tvYear05"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:hint="Niên khóa"
            android:layout_marginTop="10dp"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnModPass05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:background="#FFFF5940"/>
        <Button
            android:id="@+id/btnModInfo05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật thông tin"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="#FFFF5940"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>

</RelativeLayout>
